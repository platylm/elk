PUT sample
{
  "mappings": {
    "properties": {
      "name": {
        "type": "keyword"
      }
    }
  }
}

GET sample/_mapping

GET sample/_search
{
  "query": {
    "term": {
      "name": {
        "value": "somkiat"
      }
    }
  }
}

